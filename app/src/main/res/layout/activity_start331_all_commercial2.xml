<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Start331AllCommercial2">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="More details to get relevent buyers"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="Lock-in Period in Years (optional)"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Spinner
                android:id="@+id/floorSpin3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinnerHeight"
                android:entries="@array/lockperiod"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:freezesText="true"
                android:text="Washroom (optional)"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floorSpin3" />

            <TextView
                android:id="@+id/textView_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:text="Personal Washroom"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup5"
                app:layout_constraintEnd_toEndOf="@+id/textView_"
                app:layout_constraintStart_toStartOf="@+id/textView_"
                app:layout_constraintTop_toBottomOf="@+id/textView_">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="washroom"
                    android:text="Yes"
                    android:id="@+id/yes"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="washroom"
                    android:padding="10dp"
                    android:text="No"
                    android:id="@+id/no"/>

            </RadioGroup>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:text="Pantry/Cafeteria (optional)"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/radiogroup5"
                app:layout_constraintStart_toStartOf="@+id/radiogroup5"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup5" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup1"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="cafeteria"
                    android:text="Dry"
                    android:id="@+id/dry"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="cafeteria"
                    android:text="Wet"
                    android:id="@+id/wet"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/notAvailable"
                    android:text="Not Available"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:textStyle="bold"
                android:text="Corner Shop (optional)"
                app:layout_constraintEnd_toEndOf="@+id/radiogroup1"
                app:layout_constraintStart_toStartOf="@+id/radiogroup1"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup6"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="cornerShop"
                    android:text="Yes"
                    android:id="@+id/yesss"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="cornerShop"
                    android:padding="10dp"
                    android:text="No"
                    android:id="@+id/nooo"/>

            </RadioGroup>
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:textStyle="bold"
                android:text="Is Main Road Facing (optional)"
                app:layout_constraintEnd_toEndOf="@+id/radiogroup6"
                app:layout_constraintStart_toStartOf="@+id/radiogroup6"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup6" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup7"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="mainRoad"
                    android:text="Yes"
                    android:id="@+id/yess"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mainRoad"
                    android:padding="10dp"
                    android:text="No"
                    android:id="@+id/noo"/>

            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Floor Details"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/radiogroup7"
                app:layout_constraintStart_toStartOf="@+id/radiogroup7"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup7" />
            <TextView
                android:id="@+id/textv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:text="Total Floors"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>

            <Spinner
                android:id="@+id/floorSpin1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinnerHeight"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/textv1"
                app:layout_constraintStart_toStartOf="@+id/textv1"
                app:layout_constraintTop_toBottomOf="@+id/textv1" />


            <TextView
                android:id="@+id/textv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:text="Floor No."
                app:layout_constraintEnd_toEndOf="@+id/floorSpin1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/floorSpin1"
                app:layout_constraintTop_toBottomOf="@+id/floorSpin1" />

            <Spinner
                android:id="@+id/floorSpin2"
                android:spinnerMode="dialog"
                android:entries="@array/floors"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinnerHeight"
                app:layout_constraintEnd_toEndOf="@+id/textv2"
                app:layout_constraintStart_toStartOf="@+id/textv2"
                app:layout_constraintTop_toBottomOf="@+id/textv2" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:text="Furnishing"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/floorSpin2"
                app:layout_constraintStart_toStartOf="@+id/floorSpin2"
                app:layout_constraintTop_toBottomOf="@+id/floorSpin2" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <RadioButton
                    android:id="@+id/unfurnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Unfurnished" />

                <RadioButton
                    android:id="@+id/semifurnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Semi-Furnished" />

                <RadioButton
                    android:id="@+id/fullyfurnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Fully-Furnished" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:text=" Property Area\n Provide either Carpet Area or Super Area"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/radiogroup"
                app:layout_constraintStart_toStartOf="@+id/radiogroup"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/area1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/areaSpin1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <EditText
                    android:id="@+id/areaEdit1"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:maxLength="7"
                    android:hint="Carpet Area" />
            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/areaSpin1"
                android:entries="@array/area_parameter"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight"
                android:layout_marginTop="20dp"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/area1"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/area2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/areaSpin2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/area1"
                app:layout_constraintTop_toBottomOf="@+id/area1">

                <EditText
                    android:id="@+id/areaEdit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="5dp"
                    android:maxLength="7"
                    android:hint="Super Area" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/areaSpin2"
                android:layout_width="0dp"
                android:entries="@array/area_parameter"
                android:layout_height="@dimen/spinnerHeight"
                android:layout_marginTop="20dp"
                android:spinnerMode="dialog"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/areaSpin1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/area2"
                app:layout_constraintTop_toBottomOf="@+id/areaSpin1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Next"
        android:onClick="next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>