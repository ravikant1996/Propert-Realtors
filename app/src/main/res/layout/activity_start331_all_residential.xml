                        android:padding="10dp"
                        android:text="  4  " />

                    <TextView
                        android:id="@+id/room5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  5  " />

                    <TextView
                        android:id="@+id/room6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  6  " />

                    <TextView
                        android:id="@+id/room7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  7  " />

                    <TextView
                        android:id="@+id/room8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  8  " />

                    <TextView
                        android:id="@+id/room9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  9  " />

