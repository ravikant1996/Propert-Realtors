                    <TextView
                        android:id="@+id/bhk8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boader"
                        android:onClick="selectBHK"
                        android:padding="10dp"
                        android:text="8 BHK" />

                    <TextView
                        android:id="@+id/bhk9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boader"
                        android:onClick="selectBHK"
                        android:padding="10dp"
                        android:text="9 BHK" />

                    <TextView
                        android:id="@+id/bhk10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boader"
                        android:onClick="selectBHK"
                        android:padding="10dp"
                        android:text="10 BHK" />

                    <TextView
                        android:id="@+id/bhk11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boader"
                        android:onClick="selectBHK"
                        android:padding="10dp"
                        android:text=">10 BHK" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:text="Bathroom"
                app:layout_constraintEnd_toEndOf="@+id/firsthor"
                app:layout_constraintStart_toStartOf="@+id/firsthor"
                app:layout_constraintTop_toBottomOf="@+id/firsthor" />

            <HorizontalScrollView
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/room1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  1  " />

                    <TextView
                        android:id="@+id/room2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/boader"
                        android:onClick="selectBATHROOM"
                        android:padding="10dp"
                        android:text="  2  " />

                    <TextView
                        android:id="@+id/room3"
                        android:layout_width="wrap_content"
