<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Start13_1_2_3_all">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:text="Great! \nJust fill out these last few details"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:onClick="back"
        android:src="@drawable/bac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clear_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Clear All"
        android:textSize="16dp"
        android:onClick="clearAll"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Budget"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Property Type"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/maxRupee"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/minRupee"
        app:layout_constraintTop_toBottomOf="@+id/minRupee" />

    <Spinner
        android:id="@+id/minRupee"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:entries="@array/budget_min"
        app:layout_constraintEnd_toStartOf="@+id/maxRupee"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/minError"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/maxError"/>

    <Spinner
        android:id="@+id/maxRupee"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/budget_max"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/minRupee"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageButton
        android:id="@+id/flat"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ffffff"
        android:onClick="btnFlat"
        android:src="@drawable/flat"
        app:layout_constraintEnd_toStartOf="@+id/villa"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/flat"
        app:layout_constraintEnd_toEndOf="@+id/flat"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/flat"
        app:layout_constraintTop_toTopOf="@+id/flat"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/villa"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="#ffffff"
        android:onClick="btnVilla"
        android:src="@drawable/house"
        app:layout_constraintEnd_toStartOf="@+id/plot"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/flat"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House/Villa"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/villa"
        app:layout_constraintEnd_toEndOf="@+id/villa"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/villa"
        app:layout_constraintTop_toTopOf="@+id/villa"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/plot"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:src="@drawable/plot"
        android:onClick="btnPlot"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintStart_toEndOf="@+id/villa"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/plot"
        app:layout_constraintEnd_toEndOf="@+id/plot"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/plot"
        app:layout_constraintTop_toTopOf="@+id/plot"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:freezesText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Bedroom"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/plot"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/flat"
        app:layout_constraintTop_toBottomOf="@+id/flat" />

    <include

        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bedroom"
        layout="@layout/layout_bedroom"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Area"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/plot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flat"
        app:layout_constraintTop_toBottomOf="@+id/bedroom" />

    <Spinner
        android:id="@+id/area_parameter"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:entries="@array/area_parameter"
        app:layout_constraintEnd_toStartOf="@+id/area_min"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Spinner
        android:id="@+id/area_min"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:entries="@array/area_min"
        app:layout_constraintEnd_toStartOf="@+id/area_max"
        app:layout_constraintStart_toEndOf="@+id/area_parameter"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Spinner
        android:id="@+id/area_max"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:entries="@array/area_max"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/area_min"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D52323"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:text="See Best Matching Properties"
        android:onClick="next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
